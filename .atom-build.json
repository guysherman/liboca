{
	"cmd": "./waf",
	"name": "Build",
	"sh": "true",
	"targets": {
		"Clean" : {
			"cmd": "./waf clean",
			"sh": "true"
		},
		"Configure": {
			"cmd": "./waf configure",
			"sh": "true"
		},
		"Test": {
			"cmd": "./waf test",
			"sh": "true"
		},
		"Build & Test": {
			"cmd": "./waf build test --cppcheck  --cppcheck-bin-enable=all --cppcheck-lib-enable=all",
			"sh": "true"
		},
		"Full Verify": {
			"cmd": "./waf clean build verify --cppcheck --cppcheck-bin-enable=all --cppcheck-lib-enable=all",
			"sh": "true"
		}
	}
}
